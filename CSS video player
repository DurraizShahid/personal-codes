HTML

<div class="video-player">
  <video src="video.mp4"></video>
  <div class="play-pause-button"></div>
  <div class="progress-bar">
    <div class="progress"></div>
  </div>
  <div class="volume-control"></div>
  <div class="fullscreen-button"></div>
</div>
